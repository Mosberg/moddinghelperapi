<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
    "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
    "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <!-- Suppress checks for test files -->
    <suppress checks=".*" files=".*[\\/]test[\\/].*"/>

    <!-- Suppress checks for generated code -->
    <suppress checks=".*" files=".*[\\/]generated[\\/].*"/>

    <!-- Suppress magic number checks in test constants -->
    <suppress checks="MagicNumber" files="TestConstants\.java"/>

    <!-- Suppress line length for long URLs and imports -->
    <suppress checks="LineLength" files=".*" lines="1-20"/>
</suppressions>
